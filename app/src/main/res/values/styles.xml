<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Login_Edittext_medium">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">#A39595</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Link">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextView_Footer">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#0C0C0C</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextView_Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/but_bgm</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Login_TextView_header">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Login_TextView_subHeading">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Register_edittext">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColorHint">#A39595</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Register_textview_Header_large">
        <item name="android:paddingTop">30dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_small">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Login_link">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">19sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">35dp</item>
    </style>

    <style name="Heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_bar">
        <item name="android:hint">search here</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:inputType">text</item>
        <item name="android:drawableStart">@drawable/baseline_search_24</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item1">
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="item2">
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="subheading">
        <item name="android:gravity">left</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="subheading1">
        <item name="android:gravity">left</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="desc">
        <item name="android:gravity">left</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
</resources>